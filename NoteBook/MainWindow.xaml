<Window x:Class="NoteBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBook"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button Content="Saisir les matières" Margin="40" Click="GoEditUnits" FontSize="16"/>
        <Button Content="Rentrer un examen" Margin="40" Grid.Column="1" Grid.Row="2" FontSize="16" Click="GoCreateExam"/>
        <Button Content="Afficher les moyennes" Margin="40" Grid.Column="2" Grid.Row="0" FontSize="16" Click="GoPrintAverage"/>
        <Label Content="Carnet de note" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" FontSize="36"/>
        <Image Grid.Column="1" Grid.Row="1" Source="book.png"/>
    </Grid>
</Window>
